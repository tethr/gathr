<!DOCTYPE html>
<html metal:use-macro="main_template">
    <metal:block fill-slot="page-content">
        <!-- Body -->
        <div class="container-fluid" i18n:domain="gathr">
            <h1>${layout.page_title}</h1>
            <p>
            <a href="${add_user_url}" class="btn btn-primary" i18n:translate=""
                >Add user</a>
            </p>
            <table class="table table-striped table-hover table-condensed">
                <tbody>
                    <tr tal:repeat="user users">
                        <td><a href="${user['url']}">${user['title']}</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </metal:block>
</html>
